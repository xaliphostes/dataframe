Language: Cpp
BasedOnStyle: Chromium  # Vous pouvez choisir entre LLVM, Google, Chromium, Mozilla, WebKit

BasedOnStyle: Microsoft  # Peut être : LLVM, Google, Chromium, Mozilla, WebKit
Standard: c++17     # Version du C++ : c++03, c++11, c++14, c++17, c++20
UseTab: Never       # Never, ForIndentation, ForContinuationAndIndentation, Always
IndentWidth: 4
TabWidth: 4
ColumnLimit: 80

AlignAfterOpenBracket: BlockIndent
BraceWrapping: {}
AllowShortLambdasOnASingleLine: All

# Configuration spécifique pour les lambdas
LambdaBodyIndentation: Signature  # Comment indenter le corps des lambdas
AlwaysBreakAfterReturnType: Empty
BraceWrapping:
  AfterCaseLabel: false
  AfterClass: false
  AfterControlStatement: Never
  AfterEnum: false
  AfterFunction: false
  AfterNamespace: false
  AfterStruct: false
  AfterUnion: false
  BeforeCatch: false
  BeforeElse: false
  IndentBraces: false
  SplitEmptyFunction: true
  SplitEmptyRecord: true

# Autres paramètres utiles
ColumnLimit: 100  # Longueur maximale des lignes